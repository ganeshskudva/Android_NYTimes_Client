<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="@dimen/spacing"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_article_item_border"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:background="@color/primary_light"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="3dp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/small_text"
        android:layout_below="@+id/tvArticleHeadlinePreview"
        android:id="@+id/tvCategoryPreview"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="15sp"
        tools:text="Article Title"
        android:id="@+id/tvArticleHeadlinePreview"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/ivArticleImage"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="10sp"
        tools:text="Article Title"
        android:id="@+id/tvArticleHeadlinePrintPreview"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@+id/tvCategoryPreview"/>
</RelativeLayout>